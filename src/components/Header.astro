---
import HeaderLink from "./HeaderLink.astro";
import { SITE_TITLE } from "../config";
import MobileNav from "./MobileNav.astro";
---

<header class="header">
  <!-- TODO: conditional rendering? -->
  <MobileNav />
  <!-- <DesktopNav /> -->
</header>

<style lang="scss">
  @use "../styles/abstracts/" as *;

  .header {
    width: 100%;
    position: fixed;
    z-index: 1;
    background-color: lighten($color: map-get($gmk9009, beige), $amount: 10%);
  }
</style>

<script>
  const primaryHeader = document.querySelector(".primary-header");
  const MobileNav = document.querySelector(".mobile-nav");
  const navToggle = document.querySelector(".mobile-nav-toggle");
  const hamburger = document.querySelector(".hamburger");
  const close = document.querySelector(".close");

  navToggle.addEventListener("click", () => {
    MobileNav.hasAttribute("data-visible")
      ? navToggle.setAttribute("aria-expanded", false)
      : navToggle.setAttribute("aria-expanded", true);
    MobileNav.toggleAttribute("data-visible");
    close.toggleAttribute("data-visible");
    hamburger.toggleAttribute("data-invisible");
    // primaryHeader.toggleAttribute("data-overlay");
  });
</script>
